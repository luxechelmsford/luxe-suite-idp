{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./lib",
  },
  "include": [
    "src/**/*.ts",
    "esbuild.config.js",
  ],
  "exclude": ["node_modules", "lib"]
}
